<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
     "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
     "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.gkd.recipes.dto">
    <class
        name="IngredientDto"
        table="ingredients"
    >
        
        <id name="id" type="int">
            <generator class="increment"/>
        </id>
        
        <property name="unitsValue" column="units_value" type="double" ></property>
        
        <property name="measure"  type="string" ></property>
        
        <many-to-one name="product" column="product_id" class="com.gkd.recipes.dto.ProductDto"  not-null="true" cascade="all"></many-to-one>
        
        <many-to-one name="recipe" column="recipe_id" class="com.gkd.recipes.dto.RecipeDto" not-null="true" cascade="all"></many-to-one>
        
    </class>
</hibernate-mapping>
